<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mks.uuprojectone.Activity.Activity_Teacher_Signup">

    <EditText
        android:id="@+id/etTeacherName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="74dp" />
    <EditText
        android:id="@+id/etTeacherEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_below="@+id/etTeacherName"/>
    <EditText
        android:id="@+id/etTeacherPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"
        android:inputType="textPassword"
        android:layout_below="@+id/etTeacherEmail"/>
    <EditText
        android:id="@+id/etTeacherDeaprtment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Deaprtment"
        android:layout_below="@+id/etTeacherPassword"/>
    <EditText
        android:id="@+id/etTeacherDesignation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Designation"
        android:layout_below="@+id/etTeacherDeaprtment"/>

    <EditText
        android:id="@+id/etTeacherContactNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contact NO"
        android:layout_below="@+id/etTeacherDesignation"/>
    <Button
        android:id="@+id/btTeacherSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign UP"
        android:layout_below="@+id/etTeacherContactNo"/>

</RelativeLayout>
